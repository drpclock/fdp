rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colecci贸n usuarios
    match /usuarios/{document=**} {
      allow read: if true;
      allow write: if true;
    }
    
    // Reglas para la colecci贸n empresas
    match /empresas/{empresaId} {
      allow read: if true;
      allow write: if true;
      
      // Reglas para la subcolecci贸n trabajadores
      match /trabajadores/{trabajadorId} {
        allow read: if true;
        allow write: if true;

        // Reglas para la subcolecci贸n fichajes
        match /fichajes/{fichajeId} {
          allow read: if true;
          allow create: if true;
          allow update: if false;
          allow delete: if false;
        }
      }
    }
  }
} 